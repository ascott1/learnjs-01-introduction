#! /usr/bin/env node

var convert = require('ebook-convert');

var epub = convert({
  source: 'book.md',
  target: 'dist/book.epub',
  arguments: [
    ['--base-font-size', '10'], 
    ['--authors', 'Seth Vincent'],
    ['--extra-css', 'test.css']
  ]
});

epub.on('end', function(){
  console.log('did it!, the epub exists!')
});

var mobi = convert({
  source: 'book.md',
  target: 'dist/book.mobi',
  arguments: [
    ['--base-font-size', '10'], 
    ['--authors', 'Seth Vincent'],
    ['--extra-css', 'test.css']
  ]
});

mobi.on('end', function(){
  console.log('did it!, the mobi exists!')
});

var pdf = convert({
  source: 'book.md',
  target: 'dist/book.pdf',
  arguments: [
    ['--base-font-size', '10'], 
    ['--authors', 'Seth Vincent'],
    ['--extra-css', 'test.css']
  ]
});

pdf.on('end', function(){
  console.log('did it!, the pdf exists!')
});